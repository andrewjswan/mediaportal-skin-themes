<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>	
	    
    <!--            :: RSS ::            -->

    <control Style="BasicHomeFade">
      <description>Feed items</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>100</posX>
      <posY>1000</posY>
      <width>1730</width>
      <align>left</align>
      <font>font11</font>
      <textcolor>ffeaeaea</textcolor>
      <label>#infoservice.feed.titles</label>
      <wrapString> :-: </wrapString>
      <shadowAngle>0</shadowAngle>
      <shadowDistance>0</shadowDistance>
      <shadowColor></shadowColor>
      <visible>plugin.isenabled(InfoService)+string.equals(#infoservice.feed.enabled,true)+![control.isvisible(8006555)|control.isvisible(8106555)|control.isvisible(8206555)|control.isvisible(8306555)|control.isvisible(8406555)]</visible>
      <animation effect="fade" end="0" start="100" reversible="false" time="200" condition="control.isvisible(8005555)">conditional</animation>
	  <animation effect="fade" end="100" start="0" reversible="false" time="100" condition="!control.isvisible(8005555)">conditional</animation>
    </control>
	  
    <control Style="BasicHomeFade">
      <description>Feed items</description>
      <type>fadelabel</type>
      <id>1</id>
      <posX>100</posX>
      <posY>1000</posY>
      <width>1730</width>
      <align>left</align>
      <font>font11</font>
      <textcolor>ff888888</textcolor>
      <label>#WorldNews.NewsTicker</label>
      <wrapString> :-: </wrapString>
      <shadowAngle>0</shadowAngle>
      <shadowDistance>0</shadowDistance>
      <shadowColor></shadowColor>
      <visible>plugin.isenabled(World News)+!string.equals(#WorldNews.NewsTicker)+![control.isvisible(8006555)|control.isvisible(8106555)|control.isvisible(8206555)|control.isvisible(8306555)|control.isvisible(8406555)]</visible>
      <animation effect="fade" end="0" start="100" reversible="false" time="200" condition="control.isvisible(8005555)">conditional</animation>
	  <animation effect="fade" end="100" start="0" reversible="false" time="100" condition="!control.isvisible(8005555)">conditional</animation>
    </control>
	  
  </controls>
</window>